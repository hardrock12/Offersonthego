<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="arjun.offersonthego.sellerOptions"
    tools:showIn="@layout/app_bar_seller_options">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shop id :"
        android:id="@+id/title1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:id="@+id/shop_id"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shop name :"
        android:id="@+id/title2"
        android:textSize="15dp"
        android:layout_below="@+id/shop_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/shop_name"
        android:layout_alignBottom="@+id/title2"
        android:layout_alignLeft="@+id/shop_id"
        android:layout_alignStart="@+id/shop_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address :"
        android:id="@+id/title3"
        android:textSize="15dp"
        android:layout_below="@+id/title2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/shop_address"
        android:layout_below="@+id/shop_name"
        android:layout_alignLeft="@+id/shop_name"
        android:layout_alignStart="@+id/shop_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Region :"
        android:id="@+id/title4"
        android:textSize="15dp"
        android:layout_below="@+id/shop_address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/shop_region"
        android:layout_below="@+id/title3"
        android:layout_alignLeft="@+id/shop_address"
        android:layout_alignStart="@+id/shop_address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Type :"
        android:id="@+id/title5"
        android:textSize="15dp"
        android:layout_below="@+id/title4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/shop_type"
        android:layout_below="@+id/title4"
        android:layout_alignLeft="@+id/shop_region"
        android:layout_alignStart="@+id/shop_region" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone No :"
        android:id="@+id/title6"
        android:textSize="15dp"
        android:layout_below="@+id/title5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/shop_phno"
        android:layout_alignBottom="@+id/title6"
        android:layout_alignLeft="@+id/shop_type"
        android:layout_alignStart="@+id/shop_type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller Name :"
        android:id="@+id/title7"
        android:textSize="15dp"
        android:layout_below="@+id/title6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/shop_sellerName"
        android:layout_below="@+id/shop_phno"
        android:layout_alignLeft="@+id/shop_phno"
        android:layout_alignStart="@+id/shop_phno" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No of Products Registered :"
        android:id="@+id/title8"
        android:textSize="15dp"
        android:layout_below="@+id/title7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:id="@+id/shop_nor"
        android:layout_above="@+id/shop_noo"
        android:layout_toRightOf="@+id/title8"
        android:layout_toEndOf="@+id/title8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No of Products Out of Stock :"
        android:id="@+id/title9"
        android:textSize="15dp"
        android:layout_below="@+id/title8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:id="@+id/shop_noo"
        android:layout_alignBottom="@+id/title9"
        android:layout_toRightOf="@+id/title9"
        android:layout_toEndOf="@+id/title9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No of Products In Stock :"
        android:id="@+id/textView6"
        android:textSize="15dp"
        android:layout_below="@+id/title9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:id="@+id/shop_noi"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/shop_nor"
        android:layout_alignStart="@+id/shop_nor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating :"
        android:id="@+id/textView3"
        android:textSize="15dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:id="@+id/shop_rating"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/title1"
        android:layout_toEndOf="@+id/title1" />

</RelativeLayout>
