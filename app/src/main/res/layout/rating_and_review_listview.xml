<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="125dp"
    android:layout_width="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rating_username"
    android:text="arjun2014"
    android:textSize="20sp"
    android:layout_marginLeft="39dp"
    android:layout_marginStart="39dp"
    android:layout_above="@+id/rating_review"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating_review"
        android:text="Good shop fanstatic shop"

        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/rating_username"
        android:layout_alignStart="@+id/rating_username"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating_rating"
        android:text="4.5"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#2abaa7" />


</RelativeLayout>