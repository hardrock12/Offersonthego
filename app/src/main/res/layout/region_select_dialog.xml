<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_region"
        android:layout_above="@+id/lv_suggest"
        android:layout_toLeftOf="@+id/btn_show_suggest"
        android:layout_toStartOf="@+id/btn_show_suggest" />
    <ListView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/lv_suggest"
        android:layout_below="@+id/btn_show_suggest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp">

    </ListView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show suggestions"
        android:id="@+id/btn_show_suggest"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>