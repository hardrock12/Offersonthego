<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="arjun.offersonthego.MainActivity">

    <EditText
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/txt_search"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22sp"
        android:text=""
        android:hint="Search Product" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/btn_Search"
        android:layout_below="@+id/txt_search"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/category_list"
        android:layout_alignTop="@+id/txt_search"
        android:layout_toRightOf="@+id/txt_search"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:entries="@array/categoryofproducts"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/fimage1"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:layout_x="1dp"
        android:layout_y="52dp"
        android:layout_below="@+id/btn_Search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/fname1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_x="180dp"
        android:layout_y="57dp"

        android:layout_alignTop="@+id/fimage1"
        android:layout_alignLeft="@+id/fprice1"
        android:layout_alignStart="@+id/fprice1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fprice1"
        android:layout_x="184dp"
        android:layout_y="114dp"

        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/fmrp1"
        android:layout_alignStart="@+id/fmrp1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fmrp1"


        android:layout_x="186dp"
        android:layout_y="120dp"
        android:layout_alignTop="@+id/fimage1"
        android:layout_alignRight="@+id/btn_Search"
        android:layout_alignEnd="@+id/btn_Search"
        android:layout_marginTop="51dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/fname2"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_x="4dp"

        android:layout_y="234dp"
        android:layout_alignTop="@+id/fimage2"
        android:layout_alignLeft="@+id/txt_search"
        android:layout_alignStart="@+id/txt_search" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fprice2"

        android:layout_marginTop="35dp"
        android:layout_below="@+id/fname2"
        android:layout_alignLeft="@+id/fname2"
        android:layout_alignStart="@+id/fname2"
        android:layout_x="3dp"
        android:layout_y="276dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fmrp2"

        android:layout_below="@+id/fprice2"
        android:layout_alignLeft="@+id/fprice2"
        android:layout_alignStart="@+id/fprice2"
        android:layout_x="12dp"
        android:layout_y="296dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:id="@+id/fimage2"
        android:layout_x="150dp"
        android:layout_y="154dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/fmrp1"
        android:layout_alignStart="@+id/fmrp1" />


</RelativeLayout>
