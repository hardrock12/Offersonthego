<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="60dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="arjun.offersonthego.Update_product"
    tools:showIn="@layout/activity_update_product">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="1"
        >
        <!-- Add here which you want -->



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shop id :"
            android:id="@+id/utextView5"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/uidentifier"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product ID :"
            android:id="@+id/utextView7"
            android:layout_alignBottom="@+id/P_id"
            android:layout_alignRight="@+id/textView8"
            android:layout_alignEnd="@+id/textView8" />

        <TableRow
            android:layout_width="400px"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:id="@+id/uP_id"
                android:layout_below="@+id/uidentifier"
                android:layout_alignLeft="@+id/usendVal"
                android:layout_alignStart="@+id/usendVal"
                android:layout_column="0"
                android:text="Product Identifier" />
        </TableRow>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name :"
            android:id="@+id/utextView8"
            android:layout_below="@+id/P_id"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp" />


        <EditText
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:id="@+id/uP_name"
            android:layout_below="@+id/uP_id"
            android:layout_alignLeft="@+id/uP_id"
            android:layout_alignStart="@+id/uP_id" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description :"
            android:id="@+id/utextView9"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/uP_name"
            android:layout_alignRight="@+id/utextView8"
            android:layout_alignEnd="@+id/utextView8" />

        <EditText
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:id="@+id/uP_desc"
            android:layout_alignBottom="@+id/utextView9"
            android:layout_alignLeft="@+id/uP_name"
            android:layout_alignStart="@+id/uP_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price :"
            android:id="@+id/utextView10"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/utextView9"
            android:layout_alignRight="@+id/utextView9"
            android:layout_alignEnd="@+id/utextView9" />



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:id="@+id/uP_price"
                android:layout_alignBottom="@+id/utextView10"
                android:layout_alignLeft="@+id/uP_desc"
                android:layout_alignStart="@+id/uP_desc"
                android:layout_column="0" />
        </TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MRP :"
            android:id="@+id/utextView14"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/utextView9"
            android:layout_alignRight="@+id/utextView9"
            android:layout_alignEnd="@+id/utextView9" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:id="@+id/uP_mrp"
                android:layout_alignBottom="@+id/utextView10"
                android:layout_alignLeft="@+id/uP_desc"
                android:layout_alignStart="@+id/uP_desc"
                android:layout_column="0" />
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type :"
            android:id="@+id/utextView11"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/utextView10"
            android:layout_alignRight="@+id/utextView7"
            android:layout_alignEnd="@+id/utextView7" />

        <EditText
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:id="@+id/uP_type"
            android:layout_alignBottom="@+id/utextView11"
            android:layout_alignLeft="@+id/uP_price"
            android:layout_alignStart="@+id/uP_price" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category :"
            android:id="@+id/utextView12"
            android:layout_alignTop="@+id/uP_category"
            android:layout_alignRight="@+id/utextView13"
            android:layout_alignEnd="@+id/utextView13" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uP_category"
            android:entries="@array/categoryofproducts1"
            android:layout_below="@+id/uP_type"
            android:layout_alignLeft="@+id/uP_avail"
            android:layout_alignStart="@+id/uP_avail"
            android:layout_marginTop="27dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability :"
            android:id="@+id/utextView13"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/uP_category"
            android:layout_alignLeft="@+id/utextView7"
            android:layout_alignStart="@+id/utextView7" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uP_avail"
                android:entries="@array/availabilityofproducts"
                android:layout_alignBaseline="@+id/utextView13"
                android:layout_alignBottom="@+id/utextView13"
                android:layout_alignLeft="@+id/usendVal"
                android:layout_alignStart="@+id/usendVal"
                android:layout_column="0" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/pp"
                android:layout_column="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse Image for Updation"
                android:id="@+id/btn_update_image"
                android:layout_column="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Product"
                android:id="@+id/usendVal"
                android:layout_below="@+id/uP_avail"
                android:layout_centerHorizontal="true"
                android:layout_column="0" />
        </TableRow>

    </TableLayout>



</ScrollView>
