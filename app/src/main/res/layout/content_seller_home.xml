<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="arjun.offersonthego.sellerHome"
    tools:showIn="@layout/activity_seller_home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop id:"
        android:id="@+id/Label1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sh_id"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Label1"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Name:"
        android:id="@+id/Label2"
        android:layout_below="@+id/Label1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:id="@+id/Label3"
        android:layout_marginTop="32dp"
        android:textSize="20dp"
        android:layout_below="@+id/Label2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Region:"
        android:id="@+id/Label4"
        android:layout_marginTop="33dp"
        android:textSize="20dp"
        android:layout_below="@+id/Label3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Type:"
        android:id="@+id/textView4"
        android:layout_marginTop="28dp"
        android:textSize="20dp"
        android:layout_below="@+id/Label4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating:"
        android:id="@+id/Label5"
        android:textSize="20dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:id="@+id/sh_name"
        android:textSize="20dp"
        android:layout_alignTop="@+id/Label2"
        android:layout_centerHorizontal="true"
        android:text="shop name"/>

    <TextView
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:id="@+id/sh_address"
        android:textSize="20dp"
        android:layout_alignTop="@+id/Label3"
        android:layout_toRightOf="@+id/Label3"
        android:layout_toEndOf="@+id/Label3" />

    <TextView
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="20dp"
        android:layout_alignTop="@+id/Label4"
        android:layout_toRightOf="@+id/Label1"
        android:layout_toEndOf="@+id/Label1" />

    <TextView
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:id="@+id/sh_type"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/sh_id"
        android:layout_alignStart="@+id/sh_id" />

    <TextView
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:id="@+id/sh_rating"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/Label5"
        android:layout_toRightOf="@+id/Label4"
        android:layout_toEndOf="@+id/Label4" />

</RelativeLayout>
